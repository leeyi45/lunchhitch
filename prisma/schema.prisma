generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Shop {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  Community   Community? @relation(fields: [communityId], references: [id])
  communityId String?    @db.ObjectId
  Order       Order[]
}

model Community {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  address String
  name    String
  shops   Shop[]
}

model Order {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  from        UserInfo  @relation(name: "orderer", fields: [fromId], references: [username])
  fromId      String
  orders      String[]
  shop        Shop      @relation(fields: [shopId], references: [id])
  shopId      String    @db.ObjectId
  deliverBy   DateTime
  fulfiller   UserInfo? @relation(name: "fulfiller", fields: [fulfillerId], references: [username])
  fulfillerId String?
}

model UserInfo {
  username    String  @id @map("_id")
  email       String
  displayName String
  phoneNumber String
  Orderer     Order[] @relation("orderer")
  Fulfiller   Order[] @relation("fulfiller")
}
